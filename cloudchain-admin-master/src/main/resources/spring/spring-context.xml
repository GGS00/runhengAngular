<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                     http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                     http://www.springframework.org/schema/context
                     http://www.springframework.org/schema/context/spring-context-3.1.xsd">
    <!-- 扫描包路径 -->
    <context:component-scan base-package="com.cloudchain.platform" use-default-filters="false">
        <context:exclude-filter type="regex" expression="com.cloudchain.platform.mq.*"/>
    </context:component-scan>

    <!-- 国际化资源文件 -->
    <bean id="cloudchainMsgSource"
          class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>message/message</value>
            </list>
        </property>
    </bean>

    <bean id="appContext" class="com.cloudchain.platform.common.AppContext"/>

    <beans profile="test">
        <context:property-placeholder location="classpath*:config/jdbc_test.properties,classpath*:config/config_test.properties"
                                      ignore-unresolvable="true" />
    </beans>
    <beans profile="production">
        <context:property-placeholder location="classpath*:config/jdbc_production.properties,classpath*:config/config_production.properties"
                                      ignore-unresolvable="true" />
    </beans>

    <beans profile="dev">
        <context:property-placeholder location="classpath*:config/jdbc_dev.properties,classpath*:config/config_dev.properties"
                                      ignore-unresolvable="true" />
    </beans>
</beans>